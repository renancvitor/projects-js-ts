{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "outDir": "./frontend/assets/js",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
