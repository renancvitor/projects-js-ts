{
    "compilerOptions": {
      "module": "CommonJS",      // Para Node.js usar CommonJS
      "target": "es5",
      "lib": ["ESNext", "DOM"],
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
  }
